ex 5 Caixa registradora rudimentar // valor dos produtos separadamente ??

total = 0
dinheiroCliente = 0
troco = 0
compra = -1
while compra != 0:
    print("1 - Compra")
    print("0 - Finalizar a compra e calcular troco conforme o valor dado pelo cliente")
    compra = int(input("Digite a opção: "))
    if compra == 1:
        total = total + total
        total = float(input("Digite o valor da compra: "))
    elif compra == 0:
        print("Valor a ser pago: ",total)
        dinheiroCliente = float(input("Digite o valor que o cliente deseja utilizar para pagar: "))
        if dinheiroCliente >= total:
            troco = dinheiroCliente - total
            print("Valor total da compra: ",total)
            print("Dinheiro dado pelo cliente: ",dinheiroCliente)
            print("Troco: ",troco)
        else:
            print("Valor insuficiente para realizar a compra")
